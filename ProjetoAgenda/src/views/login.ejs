  <%- include('includes/head') %>
  <body>
    <%- include('includes/nav') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center my-3">Login</h1>
          <p class="text-center lead">Cadastre-se ou faça login abaixo</p>

          <%- include('includes/messages'); %>

          <div class="row">

            <div class="col-lg">
              <h4 class="text-center">Crie sua conta</h4>
              <p>Preencha o formulário abaixo caso não tenha uma conta</p>
              <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label" >Seu e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label" name="password">Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Criar</button>
              </form>
            </div>

            <div class="col-lg">
              <h4 class="text-center">Entrar</h4>
              <form action="/login/login" method="POST"> 
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>

          </div>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>
  </body>
  <%- include('includes/footer') %>

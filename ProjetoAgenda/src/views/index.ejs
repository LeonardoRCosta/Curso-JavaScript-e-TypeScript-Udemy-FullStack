  <%- include('includes/head') %>
  <body>
    <%- include('includes/nav') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center my-3">Agenda</h1>
          <p class="text-center lead">Seus contatos est√£o abaixo</p>

          <%- include('includes/messages'); %>
          
          <% if(contatos.length > 0) { %>
          <div class="responsive-table">
            <table class="table my-3">
              <% contatos.forEach(contato => { %>
                <tr>
                  <td><%= contato.nome %></td>
                  <td><%= contato.sobrenome %></td>
                  <td><%= contato.telefone %></td>
                  <td><%= contato.email %></td>
                  <td><a href="/contato/<%= contato._id %>">Editar</a></td>
                  <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                </tr>
              <% }); %>
          <% } else { %>
            <p class="text-center lead">Nenhum contato cadastrado</p>
          <% } %>
            </table>
          </div>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>
  </body>
  <%- include('includes/footer') %>
